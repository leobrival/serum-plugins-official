{
	"description": "Hookify plugin - User-configurable hooks from .local.md files (Bun runtime)",
	"hooks": {
		"Notification": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "bun ${CLAUDE_PLUGIN_ROOT}/hooks/notification.ts",
						"timeout": 30
					}
				]
			}
		],
		"PreToolUse": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "bun ${CLAUDE_PLUGIN_ROOT}/hooks/pretooluse.ts",
						"timeout": 10
					}
				]
			}
		],
		"PostToolUse": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "bun ${CLAUDE_PLUGIN_ROOT}/hooks/posttooluse.ts",
						"timeout": 10
					}
				]
			},
			{
				"matcher": {
					"tool_name": "Edit|Write|MultiEdit"
				},
				"hooks": [
					{
						"type": "command",
						"command": "bun ${CLAUDE_PLUGIN_ROOT}/hooks/md-formatter.ts",
						"timeout": 15
					}
				]
			}
		],
		"Stop": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "bun ${CLAUDE_PLUGIN_ROOT}/hooks/stop.ts",
						"timeout": 10
					}
				]
			}
		],
		"UserPromptSubmit": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "bun ${CLAUDE_PLUGIN_ROOT}/hooks/userpromptsubmit.ts",
						"timeout": 10
					}
				]
			}
		]
	}
}
